<?xml version='1.0' encoding='utf-8'?>
<widget id="today.badideas.basicbastard" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>basicbastard</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon density="mdpi" src="www/img/res/drawable-mdpi/ic_launcher.png" />
    <icon density="hdpi" src="www/img/res/drawable-hdpi/ic_launcher.png" />
    <icon density="xhdpi" src="www/img/res/drawable-xhdpi/ic_launcher.png" />
    <icon density="xxhdpi" src="www/img/res/drawable-xxhdpi/ic_launcher.png" />
    <icon density="xxxhdpi" src="www/img/res/drawable-xxxhdpi/ic_launcher.png" />
    <engine name="android" spec="^6.2.3" />
    <plugin name="cordova-plugin-inappbrowser" spec="^1.7.1" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
